<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.unigrid.janus.view.component.PTableColumn?>

<AnchorPane style="-fx-background-color: linear-gradient(from 75px 75px to 200px 150px, #00001c, #000024);" stylesheets="@main.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.unigrid.janus.controller.view.NodesController">
   <children>
      <VBox prefHeight="300.0" prefWidth="450.0">
         <children>
            <FlowPane alignment="CENTER" columnHalignment="CENTER">
               <children>
                  <Label text="Gridnodes" textFill="#ff8b2d">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
               </children>
            </FlowPane>
            <FlowPane prefHeight="50.0" prefWidth="450.0">
               <children>
                  <Button mnemonicParsing="false" prefWidth="120.0" style="-fx-background-radius: 50; -fx-border-color: #e72; -fx-border-radius: 50; -fx-border-width: 2; -fx-cursor: hand;" text="Start All">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <padding>
                        <Insets bottom="3.0" top="3.0" />
                     </padding>
                     <FlowPane.margin>
                        <Insets left="10.0" top="10.0" />
                     </FlowPane.margin>
                  </Button>
                  <Button mnemonicParsing="false" prefWidth="120.0" style="-fx-background-radius: 50; -fx-border-color: #e72; -fx-border-radius: 50; -fx-border-width: 2; -fx-cursor: hand;" text="Create">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <padding>
                        <Insets bottom="3.0" top="3.0" />
                     </padding>
                     <FlowPane.margin>
                        <Insets left="10.0" top="10.0" />
                     </FlowPane.margin>
                  </Button>
               </children>
            </FlowPane>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <TableView fx:id="tblTransactions">
                     <columns>
                        <PTableColumn fx:id="colTransAddress" editable="false" percentageWidth="0.15" prefWidth="170.0" sortable="false" text="Status" />
                        <PTableColumn fx:id="colTransAmount" editable="false" percentageWidth="0.2" prefWidth="75.0" sortable="false" text="Alias" />
                        <PTableColumn fx:id="colTransDate" editable="false" percentageWidth="0.441" prefWidth="130.0" sortType="DESCENDING" sortable="false" text="Address" />
                        <PTableColumn fx:id="colTransType" editable="false" percentageWidth="0.17" prefWidth="85.0" sortable="false" text="Start" />
                     </columns>
                  </TableView>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
